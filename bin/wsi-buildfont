#!/bin/sh

INSTALLDIR=/usr/share/wsi-autotools
CFGFILE=$1
if [ $CFGFILE = '-d' ] ; then
	CFGFILE='package.cfg';
	DEBUG='-d';
elif [ -z $CFGFILE ] ; then
	CFGFILE='package.cfg';
else
	DEBUG=$2;
fi

eval "$(grep '[[:alnum:]_-.][[:space:]]*=' local.cfg)"
TEMPLATES=${TEMPLATE_DIR:-$INSTALLDIR/templates}
perl $DEBUG $TEMPLATES/autosub -c $CFGFILE -c $TEMPLATES/system.cfg -d . -x \~ $TEMPLATES/templates
